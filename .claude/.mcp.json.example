{
  "mcpServers": {
    "_comment": "=== CORE UTILITIES ===",
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "YOUR_API_KEY"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },

    "_comment_ads": "=== ADVERTISING ===",
    "meta-ads": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-meta-ads"],
      "env": { "META_ACCESS_TOKEN": "YOUR_TOKEN" }
    },
    "google-ads": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-google-ads"],
      "env": { "GOOGLE_ADS_DEVELOPER_TOKEN": "YOUR_TOKEN" }
    },

    "_comment_analytics": "=== ANALYTICS ===",
    "google-analytics": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-ga4"],
      "env": { "GA_PROPERTY_ID": "YOUR_PROPERTY_ID" }
    },
    "search-console": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-gsc"],
      "env": { "GSC_SITE_URL": "YOUR_SITE_URL" }
    },

    "_comment_seo": "=== SEO TOOLS ===",
    "semrush": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-semrush"],
      "env": { "SEMRUSH_API_KEY": "YOUR_KEY" }
    },
    "ahrefs": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-ahrefs"],
      "env": { "AHREFS_API_KEY": "YOUR_KEY" }
    },
    "se-ranking": {
      "command": "npx",
      "args": ["-y", "@seranking/seo-data-api-mcp-server"],
      "env": { "SE_RANKING_API_KEY": "YOUR_KEY" }
    },
    "dataforseo": {
      "command": "npx",
      "args": ["-y", "dataforseo-mcp-server"],
      "env": {
        "DATAFORSEO_LOGIN": "YOUR_LOGIN",
        "DATAFORSEO_PASSWORD": "YOUR_PASSWORD"
      }
    },

    "_comment_social": "=== SOCIAL MEDIA (GLOBAL) ===",
    "twitter": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-twitter"],
      "env": { "TWITTER_BEARER_TOKEN": "YOUR_TOKEN" }
    },
    "linkedin": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-linkedin"],
      "env": { "LINKEDIN_ACCESS_TOKEN": "YOUR_TOKEN" }
    },
    "tiktok": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-tiktok"],
      "env": { "TIKTOK_ACCESS_TOKEN": "YOUR_TOKEN" }
    },
    "metricool": {
      "command": "npx",
      "args": ["-y", "@metricool/mcp-server"],
      "env": { "METRICOOL_API_KEY": "YOUR_KEY" },
      "_note": "Multi-platform social analytics: Instagram, Facebook, Twitter, LinkedIn, TikTok, YouTube"
    },

    "_comment_japan": "=== JAPAN MARKET ===",
    "line": {
      "command": "npx",
      "args": ["-y", "@line/line-bot-mcp-server"],
      "env": {
        "CHANNEL_ACCESS_TOKEN": "YOUR_LINE_CHANNEL_TOKEN",
        "DESTINATION_USER_ID": "YOUR_DEFAULT_USER_ID"
      },
      "_note": "LINE Official Account - 97M+ users in Japan (94% reach)"
    },

    "_comment_vietnam": "=== VIETNAM MARKET ===",
    "_zalo_note": "Zalo has no official MCP yet. Use Zalo OA API directly: https://developers.zalo.me/",

    "_comment_crm": "=== CRM & EMAIL ===",
    "hubspot": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-hubspot"],
      "env": { "HUBSPOT_ACCESS_TOKEN": "YOUR_TOKEN" }
    },
    "mailchimp": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-mailchimp"],
      "env": { "MAILCHIMP_API_KEY": "YOUR_KEY" }
    },
    "mailtrap": {
      "command": "npx",
      "args": ["-y", "@mailtrap/mcp-server"],
      "env": { "MAILTRAP_API_TOKEN": "YOUR_TOKEN" },
      "_note": "Email testing & deliverability QA"
    },

    "_comment_pm": "=== PROJECT MANAGEMENT ===",
    "notion": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": { "NOTION_API_KEY": "YOUR_KEY" },
      "_note": "Content calendar, documentation, editorial workflow"
    },
    "asana": {
      "type": "sse",
      "url": "https://mcp.asana.com/sse",
      "_note": "Campaign task tracking, team collaboration"
    },

    "_comment_comm": "=== COMMUNICATION ===",
    "slack": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-slack"],
      "env": { "SLACK_BOT_TOKEN": "YOUR_TOKEN" }
    },
    "discord": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-discord"],
      "env": { "DISCORD_BOT_TOKEN": "YOUR_TOKEN" }
    },

    "_comment_payments": "=== PAYMENTS ===",
    "stripe": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-stripe"],
      "env": { "STRIPE_SECRET_KEY": "YOUR_KEY" }
    }
  }
}
